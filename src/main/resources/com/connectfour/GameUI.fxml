<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootGridPane" style="-fx-background-color: #D9F7F0;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.connectfour.Controller">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints maxWidth="295.0" minWidth="205.0" prefWidth="216.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="25.0" />
        <RowConstraints />
    </rowConstraints>

    <Pane GridPane.columnSpan="2" />
    <Pane fx:id="insertedDiskPane" prefHeight="400.0" prefWidth="200.0" GridPane.rowIndex="1" />
    <VBox prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: #2B3B4C;" GridPane.columnIndex="1" GridPane.rowIndex="1">

        <Region prefHeight="15.0" VBox.vgrow="ALWAYS" />
      <TextField fx:id="playerOneName" promptText="Player One Name">
         <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="playerTwoName" promptText="Player Two Name">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin></TextField>
      <Button fx:id="setNamesButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="219.0" text="Set Names">
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="15.0" />
         </VBox.margin></Button>
      <Region layoutX="10.0" layoutY="10.0" prefHeight="50.0" prefWidth="200.0" />
        <Label fx:id="playerNameLabel" alignment="CENTER" prefHeight="46.0" prefWidth="311.0" text="Player One" textFill="WHITE">
            <font>
                <Font name="System Bold" size="30.0" />
            </font>
        </Label>
        <Label alignment="CENTER" prefHeight="38.0" prefWidth="315.0" text="Turn" textFill="WHITE">
            <font>
                <Font size="26.0" />
            </font>
        </Label>
        <Region prefHeight="200.0" prefWidth="167.0" VBox.vgrow="ALWAYS" />
    </VBox>
</GridPane>
